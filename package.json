{
  "name": "ranguu-api-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "API de regra de negócio da aplicação Ranguu",
  "engines": {
    "node": "^18.13",
    "yarn": "~1.22.10"
  },
  "prisma": {
    "seed": "tsx ./src/infra/database/prisma/seed.ts"
  },
  "scripts":{
    "dev:api": "tsx watch --inspect ./src/infra/http/app.ts",
    "start": "node --optimize_for_size --max_old_space_limit=460 ./dist/infra/http/app.js",
    "build": "tsup src",
    "release": "npx prisma migrate deploy && npx prisma db seed",
    "migrate": "npx prisma migrate dev"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^6.0.1",
    "joi-translation-pt-br": "^0.0.6",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "pino": "^8.11.0",
    "redis": "^4.6.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/redis": "^4.0.11",
    "prisma": "^4.12.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  }
}
